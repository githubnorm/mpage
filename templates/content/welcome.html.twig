{% extends 'base.html.twig' %}

{% block content %}
<section class="home layout-width content-center">
	<!-- <div class="card bg-secondary mb-3 mb-3"> --> 
	<div class="card border-success mb-3">
		<div class="card-header">
			<b>Hot Sunday am 18.11.2018 in der Galerie ROOT</b>
			<!--<b><a href="https://galerie-root.de/hotsunday/hotsunday-2018/" target="_blank">Hot Sunday am 18.11.2018</a></b>-->
		</div>
		<div class="card-body">
			<picture>
				<source media="(min-width: 768px)" srcset="img/events/xyz_181118_hotsunday1.png">
				<source media="(min-width: 576px)" srcset="img/events/medium/xyz_181118_hotsunday1.png">
				<img src="img/events/small/xyz_181118_hotsunday1.png" alt="hotsunday">
			</picture>
			<picture>
				<source media="(min-width: 768px)" srcset="img/events/xyz_181118_hotsunday2.png">
				<source media="(min-width: 576px)" srcset="img/events/medium/xyz_181118_hotsunday2.png">
				<img src="img/events/small/xyz_181118_hotsunday2.png" alt="hotsunday">
			</picture>
		</div>
	</div>
	<!-- <div class="card border-secondary mb-3"> -->
	<div class="card bg-secondary mb-3 mb-3">
		<div class="card-header"><b>Vergangenes</b></div>
		<div class="card-body">
			<div>
				<picture>
					<source media="(min-width: 768px)" srcset="img/events/xyz_180125_ausstellung1.jpg">
					<source media="(min-width: 576px)" srcset="img/events/medium/xyz_180125_ausstellung1.jpg">
					<img src="img/events/small/xyz_180125_ausstellung1.jpg" alt="ausstellung" style="width:100%;">
				</picture>
				<picture>
					<source media="(min-width: 768px)" srcset="img/events/xyz_180125_ausstellung2.jpg">
					<source media="(min-width: 576px)" srcset="img/events/medium/xyz_180125_ausstellung2.jpg">
					<img src="img/events/small/xyz_180125_ausstellung2.jpg" alt="ausstellung" style="width:100%;">
				</picture>
			</div>	
			<div id="show-more-target"></div>
			<div><button type="button" class="btn btn-outline-danger">Zeige mehr Vergangenes</button></div>
		</div>
	</div>

</section>

